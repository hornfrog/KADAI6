<h1>予定の新規追加</h1>
<h3>ユーザー新規作成</h3>

<%= render "shared/error", obj: @user %> 

<%= form_with model: @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_day ,"開始日" %></th>
      <td><%= f.datetime_field :start_day %></td>
    </tr>

    <tr>
      <th><%= f.label :end_day ,"終了日" %></th>
      <td><%= f.datetime_field :end_day %></td>
    </tr>
    
    <tr>
    <th><%= f.check_box :all_day, {} %></th><th>終日の場合はチェックを入れます</th>
    </tr>
    <tr>
      <th><%= f.label :schedule_memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :schedule_memo %></td>
    </tr>
  </table>

  <div>
    <ul>
      <p><%= f.submit "保存"%></p>
      <p><%= link_to "キャンセル", :users %></p>
    </ul>
  </div>
<% end %>
